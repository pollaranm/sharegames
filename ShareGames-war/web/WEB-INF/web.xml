<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <servlet>
        <servlet-name>ServletController</servlet-name>
        <servlet-class>Servlet.ServletController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Controller</servlet-name>
        <servlet-class>Servlet.Controller</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EventiController</servlet-name>
        <servlet-class>Servlet.EventiController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UtenteController</servlet-name>
        <servlet-class>Servlet.UtenteController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SquadraController</servlet-name>
        <servlet-class>Servlet.SquadraController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ClientServlet</servlet-name>
        <servlet-class>org.me.rest.client.ClientServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>rest</servlet-name>
        <servlet-class>Servlet.rest</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletController</servlet-name>
        <url-pattern>/ServletController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Controller</servlet-name>
        <url-pattern>/Controller</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EventiController</servlet-name>
        <url-pattern>/EventiController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UtenteController</servlet-name>
        <url-pattern>/UtenteController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SquadraController</servlet-name>
        <url-pattern>/SquadraController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ClientServlet</servlet-name>
        <url-pattern>/ClientServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>rest</servlet-name>
        <url-pattern>/rest</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>/faces/*</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>faces/index.xhtml</welcome-file>
    </welcome-file-list>
    <ejb-local-ref>
        <ejb-ref-name>GestoreUtente</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <local>manager.GestoreUtenteLocal</local>
        <ejb-link>ShareGames-ejb.jar#GestoreUtente</ejb-link>
    </ejb-local-ref>
    <ejb-local-ref>
        <ejb-ref-name>GestoreListaEventi</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <local>manager.GestoreListaEventiLocal</local>
        <ejb-link>ShareGames-ejb.jar#GestoreListaEventi</ejb-link>
    </ejb-local-ref>
    <ejb-local-ref>
        <ejb-ref-name>GestoreListaEventi1</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <local>manager.GestoreListaEventiLocal</local>
        <ejb-link>ShareGames-ejb.jar#GestoreListaEventi</ejb-link>
    </ejb-local-ref>
    <ejb-local-ref>
        <ejb-ref-name>GestoreListaEventi2</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <local>manager.GestoreListaEventiLocal</local>
        <ejb-link>ShareGames-ejb.jar#GestoreListaEventi</ejb-link>
    </ejb-local-ref>
    <ejb-local-ref>
        <ejb-ref-name>GestoreListaEventi3</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <local>manager.GestoreListaEventiLocal</local>
        <ejb-link>ShareGames-ejb.jar#GestoreListaEventi</ejb-link>
    </ejb-local-ref>
</web-app>
